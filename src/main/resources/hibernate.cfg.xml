<hibernate-configuration>
    <session-factory>

        <!-- DB Connection -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">
  jdbc:mysql://localhost:3306/test?useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=UTC
</property>

        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>

        <!-- Hibernate properties -->
        

       <property name="hibernate.hbm2ddl.auto">create</property> 
       <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        

        <!-- Entity mapping -->
        <mapping class="com.mycompany.coworking.entity.EPrenotazione"/>
        <mapping class="com.mycompany.coworking.entity.EPagamento"/>
        <mapping class="com.mycompany.coworking.entity.EUfficio"/>
        <mapping class="com.mycompany.coworking.entity.ESegnalazione"/>
        <mapping class="com.mycompany.coworking.entity.ERimborso"/>
        <mapping class="com.mycompany.coworking.entity.EProfilo"/>
        <mapping class="com.mycompany.coworking.entity.ERecensione"/>
        <mapping class="com.mycompany.coworking.entity.EServiziAggiuntivi"/>
        <mapping class="com.mycompany.coworking.entity.EIntervalloDisponibilita"/>
        <mapping class="com.mycompany.coworking.entity.ELocatore"/>
        <mapping class="com.mycompany.coworking.entity.EIndirizzo"/>
        <mapping class="com.mycompany.coworking.entity.EFoto"/>

    </session-factory>
</hibernate-configuration>
